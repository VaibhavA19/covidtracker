<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".VideoRecording">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Heart Rate\n Beats/minute\n Place finger on camera\n with flash on after pressing start"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
       />
    <TextView
        android:text="0"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="100sp"
        android:id="@+id/heart_rate_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>
    <Button
        android:id="@+id/measure_heart_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="START"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/heart_next_button"
        android:text="NEXT"
        android:visibility="invisible"/>
</LinearLayout>