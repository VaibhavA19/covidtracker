<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserNameActivity">

    <EditText
        android:id="@+id/user_name_edit_text"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp" />

    <EditText
        android:id="@+id/password_edit_text"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPassword"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name_edit_text"
        app:layout_constraintBottom_toBottomOf="@id/submit_user_name" />

    <Button
        android:text="next"
        android:id="@+id/submit_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/start_f_service"
        android:text="start collecting"
        app:layout_constraintTop_toBottomOf="@+id/submit_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/stop_f_service"
        android:text="stop collecting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/start_f_service"/>


</androidx.constraintlayout.widget.ConstraintLayout>