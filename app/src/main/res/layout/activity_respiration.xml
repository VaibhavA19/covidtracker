<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent"
    tools:context=".RespirationActivity">

    <TextView
        android:text="Respiratory Rate\n(Breadth/minute)\n Place your phone on abdomen\n facing up for 45 seconds"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <TextView
        android:id="@+id/respiratoryRate"
        android:text="0"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <Button
        android:text="start"
        android:id="@+id/start_stop_respiration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />
    <Button
        android:id="@+id/resp_next"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="invisible"
        android:text="Next"
        />
</LinearLayout>